{ "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "comma-dangle": [2, "never"],
    "semi": [1, "never"],
    "arrow-body-style": 0,
    "array-callback-return": 0,
    "no-mixed-operators": 0,
    "no-underscore-dangle": 0,
    "no-else-return": 0,
    "no-plusplus": 0,
    "consistent-return": 0,
    "max-len": 0,
    "no-console": 0
  },
  "globals": {
    "__DEVELOPMENT__": true
  }
}
